<% if current_user.admin? %>
  <% @subsidiaries.each do |subsidiary| %>
    <h2><%= subsidiary.name %></h2>
    <table class='table table-striped'>
      <thead class='thead-dark'>
        <tr>
          <th scope="col"><%= Addon.model_name.human %></th>
          <th scope="col"><%= AddonPrice.human_attribute_name('daily_rate') %></th>
        </tr>
      </thead>
      <tbody>
        <% subsidiary.addon_prices.each do |addon_price| %>
          <div class=<%= "addon_price#{addon_price.addon.name}" %>>
            <tr>
              <td><%= addon_price.addon.name %></td>
              <td><%= number_to_currency(addon_price.daily_rate) %></td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% elsif current_user.user? %>
    <table class='table table-striped'>
      <thead class='thead-dark'>
        <tr>
          <th scope="col"><%= Addon.model_name.human %></th>
          <th scope="col"><%= AddonPrice.human_attribute_name('daily_rate') %></th>
        </tr>
      </thead>
      <tbody>
        <% @addon_prices.each do |addon_price| %>
          <div class=<%= "addon_price#{addon_price.addon.name}" %>>
            <tr>
              <td><%= addon_price.addon.name %></td>
              <td><%= number_to_currency(addon_price.daily_rate) %></td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
<%= link_to 'Editar valores', new_addon_price_path, class: 'btn btn-primary' %>
<% end %>

