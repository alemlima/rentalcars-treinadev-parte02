<dl class="row">
  <dt class="col-sm-3"><%= CarModel.model_name.human %></dt>
  <dd class="col-sm-9"><%= @car.car_model.name %></dd>

  <dt class="col-sm-3"><%= Manufacture.model_name.human %></dt>
  <dd class="col-sm-9"><%= @car.car_model.manufacture.name %></dd>

  <dt class="col-sm-3"><%= FuelType.model_name.human%></dt>
  <dd class="col-sm-9"><%= @car.car_model.fuel_type.name %></dd>

  <dt class="col-sm-3"><%= Car.human_attribute_name('car_km') %></dt>
  <dd class="col-sm-9"><%= @car.car_km %></dd>

  <dt class="col-sm-3"><%= Car.human_attribute_name('color') %></dt>
  <dd class="col-sm-9"><%= @car.color %></dd>
  
  <dt class="col-sm-3"><%= Car.human_attribute_name('license_plate') %></dt>
