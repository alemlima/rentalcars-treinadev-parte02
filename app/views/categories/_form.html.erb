<% if category.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for category do |f| %>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1"><%= 'Nome' %></span>
    </div>
    <%= f.text_field(:name, class:"name form-control", describedby: 'basic-addon1') %>
  </div>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon2"><%= 'Diária padrão' %></span>
    </div>
    <%= f.number_field(:daily_rate, class:"daily_rate form-control", describedby: 'basic-addon2') %>
  </div>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon3"><%= 'Seguro padrão do carro' %></span>
    </div>
    <%= f.number_field(:car_insurance, class:"car_insurance form-control", describedby: 'basic-addon3') %>
  </div>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon4"><%= 'Seguro padrão contra terceiros' %></span>
    </div>
    <%= f.number_field(:third_party_insurance, class: 'third_party_insurance form-control', describedby: 'basic-addon4') %>
  </div>
  <%= f.submit 'Enviar', class: 'btn btn-primary' %>
<% end %>
